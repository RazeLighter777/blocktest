{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) Launch with xvfb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/blocktest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "DISPLAY",
                    "value": ":99"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "start-xvfb"
        },
        {
            "name": "(gdb) Launch with xvfb wrapper",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": [
                "${workspaceFolder}/debug_with_xvfb.sh",
                "${workspaceFolder}/build/Debug/blocktest"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}